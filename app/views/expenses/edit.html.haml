.container
	.span7.end
		%h2 Edit Form
	.span7.form
		= form_for [@project, @expense] do |f|
			%h5 #{f.label :name, 'project name'}
			= f.text_field :name, placeholder: :name
			%br
			%h5 #{f.label :description, 'project description'}
			= f.text_area :description, :rows => '3', placeholder: :description
			%br
			%h5 #{f.label :budget, 'project budget'}
			= f.text_field :amount, placeholder: :amount
			%br
			= f.submit 'Update Expense' , class: 'btn submit rectangle'